@page "/logout"
@using Microsoft.AspNetCore.Identity       
@using BBAPP.Data.Models                
@inject SignInManager<UsuarioAplicacion> SignInManager
@inject NavigationManager Navigation

@code {
    protected override async Task OnInitializedAsync()
    {
        await SignInManager.SignOutAsync(); // Realiza el cierre de sesión

        // Redirige a la página de inicio. Como Index.razor es [Authorize],
        // esto llevará al usuario a la página de login.
        Navigation.NavigateTo("/", true);
    }
}
